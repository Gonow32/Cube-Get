local tArgs = {...}

if #tArgs >= 2 and tArgs[2] == "help" then
  print("cube-get is the CubeSpace program downloader.")
  print("Usage: cube-get <mode> <file>")
  print()
  print("The three modes are 'get', 'run' and 'list'.")
  return
end

if #tArgs < 3 then
  printError("Usage: cube-get <mode> <file>")
  printError("Do 'cube-get help' for more information.")
  return
end

local h = http.get("https://raw.github.com/Gonow32/Cube-Get/master/programs.db")
if h then
  local t = h.readAll()
  if t then
    local t2 = textutils.unserialize(t)
    if t2 then
      if tArgs[2] == "list" then
        print("The available packages are:")
        for i,v in pairs(t2) do
          print("  "..v)
        end
        return
      end
      local packageExists = false
      for i,v in pairs(t2) do
        if v == tArgs[3] then
          packageExists = true
          break
        end
      end
      if packageExists == true then
        local h2 = http.get("https://raw.github.com/Gonow32/Cube-Get/master/"..tArgs[3].."/packageInfo")
        local info = textutils.unserialize(h2.readAll())
        if tArgs[2] == "run" then
          if info.bRunnable == true then
            local h3 = http.get("https://raw.github.com/Gonow32/Cube-Get/master/"..tArgs[3].."/"..info.sRunFile)
            local code = h3.readAll()
            local nArgs = {}
            if tArgs >= 4 then
              local count = 0
              for i = 4,#tArgs do
                count = count + 1
                nArgs[count] = tArgs[i]
              end
            end
            loadstring(code)(unpack(nArgs))
          end
        elseif tArgs[2] == "get" then
          print("Install "..tArgs[3].."? [Y/N]")
          local key
          local event
          repeat
            event, key = os.pullEvent("key")
          until key == keys.y or key == keys.n
          if key == keys.n then return end
          for i,v in pairs(info.tFiles) do
            if fs.exists(shell.dir().."/"..v) then
              print("Overwrite "..v.."? [Y/N]")
              local key
              local event
              repeat
                event, key = os.pullEvent("key")
              until key == keys.y or key == keys.n
              if key == keys.y then
                local h4 = http.get("https://raw.github.com/Gonow32/Cube-Get/master/"..tArgs[3].."/"..v)
                local t4 = h4.readAll()
                local f = fs.open(shell.dir().."/"..v,"w")
                f.write(t4)
                f.close()
                print("Downloaded "..v.."!")
              end
            else
              local h4 = http.get("https://raw.github.com/Gonow32/Cube-Get/master/"..tArgs[3].."/"..v)
              local t4 = h4.readAll()
              local f = fs.open(shell.dir().."/"..v,"w")
              f.write(t4)
              f.close()
              print("Downloaded "..v.."!")
            end
          end
          print("Downloaded "..tArgs[3].."!")
          return
        else
          printError("No such mode.")
          return
        end
      else
        printError("That package does not exist.")
        return
      end
    else
      printError("There was an error with the database.")
      return
    end
  else
    printError("There was an error getting the program database.")
    return
  end
else
  printError("There was a HTTP API error.")
  return
end
